<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootVoiceLanguage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A232E">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardVoiceLanguageRoot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardBackgroundColor="#2C3A47"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTituloVoiceLanguage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Idioma de voz"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCerrarVoiceLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✕"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- DIVIDER -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0BEC5"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- DESCRIPCIÓN -->
            <TextView
                android:id="@+id/tvDescripcionVoiceLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona el idioma en el que quieres que Kivi hable y escuche."
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <!-- BOTÓN / SELECTOR IDIOMA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSelectorIdiomaVoz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A232E"
                app:cardCornerRadius="999dp"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#2979FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvIdiomaActualVoz"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Español"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iconDropIdiomaVoz"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#2979FF" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
