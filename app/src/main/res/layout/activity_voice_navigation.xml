<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootVoiceNav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A232E"
    android:padding="24dp">

    <!-- BOTÓN VOLVER -->
    <ImageButton
        android:id="@+id/btnBackVoiceNav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back_button"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/tvVoiceNavTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/voice_nav_title"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnBackVoiceNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DIVIDER -->
    <View
        android:id="@+id/viewVoiceNavDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#2C3A47"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvVoiceNavTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LISTA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVoiceNav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/viewVoiceNavDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
