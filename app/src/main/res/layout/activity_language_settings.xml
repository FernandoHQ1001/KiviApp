<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLanguageSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A232E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Barra superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBackLanguage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="Volver" />

            <TextView
                android:id="@+id/tvTituloLanguageConfig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Idioma y región"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Espacio para balancear la barra -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2C3A47"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Sección Idioma -->
        <TextView
            android:id="@+id/tvSeccionIdioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idioma"
            android:textColor="#90A4AE"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- CARD: Idioma de la interfaz -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIdiomaInterfaz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A232E"
            app:strokeWidth="2dp"
            app:strokeColor="#2979FF"
            app:cardCornerRadius="999dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconIdiomaInterfaz"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="#2979FF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvIdiomaInterfazTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idioma de la interfaz"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIdiomaInterfazDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selecciona el idioma de menús y mensajes"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconIdiomaInterfazNext"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_next"
                    app:tint="#2979FF" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD: Idioma de voz -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIdiomaVoz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A232E"
            app:strokeWidth="2dp"
            app:strokeColor="#2979FF"
            app:cardCornerRadius="999dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconIdiomaVoz"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    app:tint="#2979FF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvIdiomaVozTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idioma de voz"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIdiomaVozDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configura el idioma en el que Kivi habla y escucha"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconIdiomaVozNext"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_next"
                    app:tint="#2979FF" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección Región y entrada -->
        <TextView
            android:id="@+id/tvSeccionRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Región y entrada"
            android:textColor="#90A4AE"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- CARD: Región -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A232E"
            app:strokeWidth="2dp"
            app:strokeColor="#2979FF"
            app:cardCornerRadius="999dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconRegion"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    app:tint="#2979FF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvRegionTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Región"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRegionDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Formato de fecha, hora y números"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconRegionNext"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_next"
                    app:tint="#2979FF" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD: Teclado -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTeclado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A232E"
            app:strokeWidth="2dp"
            app:strokeColor="#2979FF"
            app:cardCornerRadius="999dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconTeclado"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#2979FF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvTecladoTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teclado"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTecladoDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idiomas de entrada y distribución de teclas"
                        android:textColor="#90A4AE"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconTecladoNext"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_next"
                    app:tint="#2979FF" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
