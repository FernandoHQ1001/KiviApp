<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootMobilitySettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A232E">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMobilitySettingsRoot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2C3A47"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTituloMobility"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Asistencia de movilidad"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCerrarMobility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✕"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- DIVIDER -->
            <View
                android:id="@+id/viewMobilityDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0BEC5"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- CARD INTERNA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMobilityOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A232E"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- FILA 1: VOZ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLabelVoz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Voz de Kivi"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSubLabelVoz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activar o desactivar la voz"
                                android:textColor="#90A4AE"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchVozKivi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <!-- FILA 2: HÁPTICO -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLabelHaptico"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Feedback háptico"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSubLabelHaptico"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vibraciones de alerta"
                                android:textColor="#90A4AE"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchHaptico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
