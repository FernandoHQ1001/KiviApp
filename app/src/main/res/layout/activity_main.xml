<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A232E"
    android:padding="24dp">

    <!-- ðŸ”µ BARRA SUPERIOR: TÃTULO A LA IZQUIERDA + 3 BOTONES A LA DERECHA -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÃTULO A LA IZQUIERDA -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Asistente Kivi"
            android:textColor="#B0BEC5"
            android:textSize="14sp"
            android:letterSpacing="0.1"
            android:textAllCaps="true" />

        <!-- BOTÃ“N CONFIGURACIÃ“N -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_manage"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF"
            android:contentDescription="ConfiguraciÃ³n"
            android:layout_marginStart="8dp" />

        <!-- BOTÃ“N PERFIL -->
        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF"
            android:contentDescription="Perfil"
            android:layout_marginStart="8dp" />

        <!-- BOTÃ“N CERRAR SESIÃ“N -->
        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_lock_power_off"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF"
            android:contentDescription="Cerrar sesiÃ³n"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- ðŸ”µ CARD PRINCIPAL (IMAGEN + TEXTO) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#2C3A47"
        app:cardCornerRadius="24dp"
        app:strokeWidth="0dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnEscuchar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="#2C3A47"
                android:visibility="gone"
                tools:visibility="visible"
                tools:src="@tools:sample/backgrounds/scenic" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0">

                <TextView
                    android:id="@+id/txtEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="24dp"
                    android:text="Hola, soy Kivi.\nPresiona el botÃ³n azul para hablar."
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:lineSpacingExtra="6dp" />
            </ScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ”µ BOTÃ“N ESCUCHAR -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEscuchar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:text="Hablar con Kivi"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:backgroundTint="#2979FF"
        app:cornerRadius="36dp"
        app:icon="@android:drawable/ic_btn_speak_now"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:iconTint="#FFFFFF"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCamara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ðŸ”µ BOTÃ“N CÃMARA -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCamara"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:text="Reconocer Objeto"
        android:textSize="16sp"
        android:textColor="#2979FF"
        app:strokeColor="#2979FF"
        app:strokeWidth="2dp"
        app:cornerRadius="36dp"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:iconTint="#2979FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
