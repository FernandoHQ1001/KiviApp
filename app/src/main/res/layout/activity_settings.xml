<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#1A232E"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- BARRA SUPERIOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBackSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back_button"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvTituloConfig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2C3A47"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

        <!-- MULTIMEDIA -->
        <TextView
            android:id="@+id/tvMultimedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_multimedia"
            android:textColor="#90A4AE"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <!-- CARD SONIDO -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSonidoVolumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2C3A47"
            app:cardCornerRadius="20dp"
            app:strokeWidth="2dp"
            app:strokeColor="#2979FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconSonido"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_silent_mode_off" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvSonidoTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_sound_volume"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSonidoDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_sound_description"
                        android:textColor="#90A4AE"
                        android:textSize="12sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconSonidoNext"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_next" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ACCESIBILIDAD -->
        <TextView
            android:id="@+id/tvAccesibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_accessibility"
            android:textColor="#90A4AE"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <!-- CARD TAMAÑO TEXTO -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTamanoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2C3A47"
            app:cardCornerRadius="20dp"
            app:strokeWidth="2dp"
            app:strokeColor="#2979FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/iconTexto"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="T"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvTextoTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_text_size"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvTextoDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_text_description"
                        android:textColor="#90A4AE"
                        android:textSize="12sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconTextoNext"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_next" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- PERSONALIZACIÓN -->
        <TextView
            android:id="@+id/tvPersonalizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_personalization"
            android:textColor="#90A4AE"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <!-- CARD APARIENCIA -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardApariencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2C3A47"
            app:cardCornerRadius="20dp"
            app:strokeWidth="2dp"
            app:strokeColor="#2979FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconApariencia"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_gallery" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvAparienciaTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_appearance"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAparienciaDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_appearance_description"
                        android:textColor="#90A4AE"
                        android:textSize="12sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconAparienciaNext"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_next" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- AYUDA -->
        <TextView
            android:id="@+id/tvAyuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_help"
            android:textColor="#90A4AE"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <!-- CARD TUTORIAL -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2C3A47"
            app:cardCornerRadius="20dp"
            app:strokeWidth="2dp"
            app:strokeColor="#2979FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconTutorial"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_help" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvTutorialTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_tutorial"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvTutorialDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_tutorial_description"
                        android:textColor="#90A4AE"
                        android:textSize="12sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconTutorialNext"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_next" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
